mixin nav()
    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
                a.main-font-weight.navbar-brand(href='/')
                    span.glyphicon.glyphicon-cog(aria-hidden='true')
                    |  myForum
            ul.nav.navbar-nav
                li.active
                    a.main-font-weight(href='/')
                        span.glyphicon.glyphicon-home
                        |  Home
            form.navbar-form.navbar-right(action="/action_page.php")
                div.input-group
                    input.search-query(type="text" class="form-control" placeholder="Search.." name="search")
                    div.input-group-btn
                        button.query-btn.btn.btn-default(type="submit")
                            i.glyphicon.glyphicon-search
            ul.nav.navbar-nav.navbar-right
                if user
                    li.active
                        a.main-font-weight
                            span.glyphicon.glyphicon-ok-sign
                            = ' Welcome, ' + user.username
                    li.active
                        a.main-font-weight(href="/logout")
                            span.glyphicon.glyphicon-log-out
                            |  Log out
                else
                    li.active
                        a(href="/sign-up")
                            span.glyphicon.glyphicon-user
                            |  Sign Up
                    li.active
                        a(href="/login")
                            span.glyphicon.glyphicon-log-in
                            |  Login
